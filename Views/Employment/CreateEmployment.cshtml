@model CreateEmploymentViewModel

@{
    ViewBag.Title = "Create Job";
}

<div class="panel panel-default ">
    <div class="panel-body">
        <div class="align-content-center">
            <div asp-validation-summary="All" class="text-danger"></div>

            <form enctype="multipart/form-data" asp-controller="Employment" asp-action="CreateEmployment" method="post" class="mt-3 mx-auto col-sm-4 p-1">

                <div class="form-group row">
                    <label asp-for="SelectedCompany" class="col-sm-3 col-form-label"></label>

                    <div class="col-sm-8">
                        @Html.DropDownList("SelectedCompany", new SelectList(Model.companies.Select(x => new { Value = x.CompanyId, Text = x.CompanyName }), "Value", "Text"), new { @class = "form-control" });
                        @Html.ValidationMessageFor(x => x.SelectedCompany, "Select an option", new { @class = "text-danger" })

                        <span asp-validation-for="SelectedCompany" class="text-danger"></span> 
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="SelectedStudent" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        @Html.DropDownList("SelectedStudent", new SelectList(Model.students.Select(x => new { Value = x.EmployeeId, Text = x.LastName }), "Value", "Text"), new { @class = "form-control" });
                        @Html.ValidationMessageFor(x => x.SelectedStudent, "Select an option", new { @class = "text-danger" })
                        <span asp-validation-for="SelectedStudent" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Role" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Role" class="form-control" />
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Amount" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="PayDay" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="PayDay" class="form-control" />
                        <span asp-validation-for="PayDay" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="StartDate" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="EndDate" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for=" EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="m-4">
                    <button type="submit" class=" btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <script type="text/javascript">
            $('#Country').change(function () {
                var selectedCompany = $("#Country").val();
                var regionsSelect = $('#Region');
            }
    </script>
}