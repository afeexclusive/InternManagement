@model CreateCompanyViewModel

@{
    ViewBag.Title = "Create Company";

}

<div class="panel panel-default ">
    <div class="panel-body">
        <div class="align-content-center">
            <div asp-validation-summary="All" class="text-danger"></div>

            <form enctype="multipart/form-data" asp-controller="Employment" asp-action="CreateCompany" method="post" class="mt-3 mx-auto col-sm-4 p-1">

                <div class="form-group row">
                    <label asp-for="CompanyName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Address" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ContactName" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="ContactName" class="form-control" />
                        <span asp-validation-for="ContactName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ContactPhone" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="ContactPhone" class="form-control" />
                        <span asp-validation-for="ContactPhone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="ContactEmail" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="ContactEmail" class="form-control" />
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="m-4">
                    <button type="submit" class=" btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
