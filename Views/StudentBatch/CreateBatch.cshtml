@model BatchViewModel

@{
    ViewBag.Title = "Assign Batch";

    
}


        <div class="panel panel-default ">
            <div class="panel-body">
                <div class="align-content-center">
                    <div class="row">

                        <div class="col-md-6 col-md-offset-2">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <form enctype="multipart/form-data" asp-controller="studentbatch" asp-action="createbatch" method="post" class="mt-3 p-1">

                                <input hidden asp-for="AcadaProgramId" value="@Model.AcadaProgramId" />

                                <div class="form-group">
                                    <label asp-for="Name"></label>
                                    <select asp-for="Name" class="custom-select form-control" asp-items="Html.GetEnumSelectList<Selector.Batch>();">
                                        <option>Please Select</option>
                                    </select>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Supervisor"></label>
                                   
                                        <input asp-for="Supervisor" class="form-control" />
                                        <span asp-validation-for="Supervisor" class="text-danger"></span>
                                    
                                </div>

                                <div class="form-group">
                                    <label asp-for="Year"></label>
                                    <select asp-for="Year" class="custom-select mr-sm-2 form-control" asp-items="Html.GetEnumSelectList<Selector.BatchYear>();">
                                        <option>Please Select</option>
                                    </select>
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="StartDate"></label>
                                    
                                        <input asp-for="StartDate" class="form-control" type="date" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    
                                </div>

                                <div class="form-group">
                                    <label asp-for="EndDate"></label>
                                    
                                        <input asp-for="EndDate" class="form-control" type="date" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    
                                </div>

                                <div class="m-4">
                                    <button type="submit" class=" btn btn-primary">Assign</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    
