@model int

@{ 
    ViewBag.Title = "404 Error";
}

    <div class="container">
        <div class="row">
            <div class="col mt-5">
                <div class="alert alert-danger text-center col-md-6 mt-1 mb-1">
                    <h4>404 Page Not Found Error:</h4>
                    <hr />
                    <h5>
                        Student with Id = @Model cannot be found
                    </h5>
                    <p><a asp-controller="home" asp-action="index" class="btn btn-success">Click to see the list of all available Devs</a></p>
                </div>
            </div>
        </div>
    </div>