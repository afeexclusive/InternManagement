@model HomeDetailsViewModel

@{

    ViewBag.Title = Model.PageTitle ;
    string FullName = Model.employee.FirstName + " " + Model.employee.LastName;
    var photopath = "~/img/" + (Model.employee.Photo ?? "noimage.jpg");
}
    
<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard <small>Manage Employee</small></h1>
            </div>
            <div class="col-md-2">
                <div class="dropdown create">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        Create Content
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a type="button" href="" data-toggle="modal" data-target="#addPage">Add Employee</a></li>
                        <li><a href="#">Add More Details</a></li>
                        @*<li><a href="#">Add User</a></li>*@
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</section>

<section id="main">
    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="index.html" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>

                        <a href="pages.html" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Employee <span class="badge"> 4 </span></a>
                        <a href="posts.html" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Pages <span class="badge">2</span></a>
                        <a href="users.html" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users <span class="badge">203</span></a>
                    </div>

                    <div class="well">
                        <h4>Disk Space Used</h4>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                60%
                            </div>
                        </div>
                        <h4>Bandwidth Used </h4>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
                                40%
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <!-- Website Overview -->
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Website Overview</h3>
                        </div>
                        <div class="panel-body">

                            <div class="row">
                                <div class="col-md-3">
                                    <div class="well card">
                                        <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span>34 </h2>
                                        <h4>Users</h4>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="well dash-box">
                                        <h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> 2</h2>
                                        <h4>Pages</h4>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="well dash-box">
                                        <h2><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 33</h2>
                                        <h4>Posts</h4>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="well dash-box">
                                        <h2><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> 12,334</h2>
                                        <h4>Visitors</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="panel panel-default">
                            <div class="panel-heading main-color-bg">
                                <h3 class="panel-title">Employee Details</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-12 bg-danger justify-content-center">
                                        <div class="card">
                                            <div class="card-header">
                                                <h1 class="text-center"> Student Name: @FullName </h1>
                                                <h3 class="text-center">@Model.PageTitle</h3>
                                            </div>

                                            <div class="card-body text-center">
                                                <img class="card-img-top imageThumbnail" src="@photopath" asp-append-version="true" />
                                                <h4> Employee ID: @Model.employee.Id </h4>
                                                <a href="#moredetails" class="btn btn-outline-primary">More Details</a>
                                            </div>

                                            <div class="row">
                                                <table class="table table-striped table-hover p-2" id="dataTable">
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Email</th>
                                                        <th>Phone</th>
                                                        <th>Details</th>
                                                        
                                                    </tr>
                                                    @foreach (var guarant in Model.Guarantor)
                                                    {
                                                        
                                                        <tr>
                                                            <td> @guarant.Name</td>
                                                            <td> @guarant.Email</td>
                                                            <td> @guarant.HomePhone | @guarant.OfficePhone</td>
                                                            @*<td>
                                                                <a asp-controller="Guarantor" asp-action="details" asp-route-id="@guarant.Id" class=" text-center m-1 glyphicon glyphicon-eye-close"></a>
                                                                <a type="button" data-target=".deleteGuarant-@guarant.Id" data-toggle="modal" class=" text-center m-1 glyphicon glyphicon-remove "></a>
                                                                <a asp-controller="guarantor" asp-action="edit" asp-route-id="@guarant.Id" class=" text-center m-1 glyphicon glyphicon-pencil "></a>
                                                                <a asp-controller="guarantor" asp-action="create" asp-route-id="@guarant.Id" class="text-center m-1 glyphicon glyphicon-plus-sign"> </a>
                                                            </td>*@
                                                        </tr>

                                                        //delete modal
                                                        <div class="modal fade deleteStudent-@guarant.Id" tabindex="-1" role="dialog" aria-labelledby="addPage" aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                        <h3 class="modal-title text-danger text-center" id="exampleModalLabel">Delete Warning</h3>
                                                                    </div>

                                                                    <div class="container">
                                                                        <h2>Do you which to delete @FullName ?</h2>
                                                                        <p>
                                                                            <a asp-controller="home" asp-action="delete" asp-route-id="@guarant.Id" class="btn btn-danger">Yes</a>
                                                                            <a class="btn btn-primary close" data-dismiss="modal" aria-label="Close">No</a>
                                                                        </p>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }

                                                </table>

                                            </div>

                                            <div id="moredetails">
                                                <h4> Email: @Model.employee.Email </h4>
                                                <h4> Batch: @Model.employee.AdmissionBatch </h4>
                                                <h4> Adminssion Type: @Model.employee.AdmissionType </h4>
                                                <h4> Gender: @Model.employee.Gender</h4>
                                                <h4> Marital Status: @Model.employee.MaritalStatus</h4>
                                                <h4> Phone No: @Model.employee.PhoneNumber</h4>
                                                <h4> Status: @Model.employee.Status</h4>
                                                <h4> Nationality: @Model.employee.Nationalty</h4>
                                                <h4> Identification: @Model.employee.Identification</h4>
                                                <h4> Health: @Model.employee.HealthCondition</h4>
                                                <h4> Date of Birth: @Model.employee.DateOfBirth</h4>
                                            </div>

                                            <div class="card-footer text-center">
                                                <a asp-controller="home" asp-action="index" class="btn btn-dark">Back</a>
                                                <a asp-controller="home" asp-action="edit" asp-route-id="@Model.employee.Id" class="btn btn-primary">Edit</a>
                                                <a asp-controller="guarantor" asp-action="create" asp-route-id="@Model.employee.Id" class="btn btn-primary">Add Guarantor</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}
