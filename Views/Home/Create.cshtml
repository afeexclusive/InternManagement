@model EmployeeCreateViewModel

@{
    ViewBag.Title = "Create Student";

}

    
    <div class="panel panel-default ">
        <div class="panel-body">
            <div class="align-content-center">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-3 mx-auto col-sm-4 p-1">

                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="OtherName" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="OtherName" class="form-control" />
                            <span asp-validation-for="OtherName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="DateOfBirth" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Address" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="AdmissionBatch" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="AdmissionBatch" class="custom-select mr-sm-2 form-control" asp-items="Html.GetEnumSelectList<Selector.Batch>();">
                                <option>Please Select</option>
                            </select>
                            <span asp-validation-for="AdmissionBatch" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="AdmissionType" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="AdmissionType" class="custom-select mr-sm-2 form-control" asp-items="Html.GetEnumSelectList<Selector.AddmissionType>();">
                                <option>Please Select</option>
                            </select>
                            <span asp-validation-for="AdmissionType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Nationalty" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="Nationalty" class="custom-select mr-sm-2 form-control" asp-items="Html.GetEnumSelectList<Selector.Nationality>();">
                                <option>Please Select</option>
                            </select>
                            <span asp-validation-for="Nationalty" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="MaritalStatus" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="MaritalStatus" class="custom-select mr-sm-2 form-control" asp-items="Html.GetEnumSelectList<Selector.Marital>();">
                                <option>Please Select</option>
                            </select>
                            <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Photo" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <div class="custom-file">
                                <input asp-for="Photo" class="form-control custom-file-input" />
                                <label class="custom-control-label">Choose File...</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="NextOFKinName" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="NextOFKinName" class="form-control" />
                            <span asp-validation-for="NextOFKinName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="NextOfKinNumber" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="NextOfKinNumber" class="form-control" />
                            <span asp-validation-for="NextOfKinNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="m-4">
                        <button type="submit" class=" btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts { 
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('custom-file-label').html(fileName);
                });
            });
        </script>
}
       